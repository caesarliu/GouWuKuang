<!DOCTYPE html>
<html>
  <head>
    <title>GouWuKuang</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "hotproduct"%>
    <%= stylesheet_link_tag "shopping", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

  </head>
  <body id="store">
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "购物狂" %>
    </div>
    <div id="navi">
      <u1>
        <li>
          <%= link_to "首页", default_path %>
        </li>
        <li>
          <a href="http://localhost:3000/products">排行榜</a>
        </li>
        <li>
          <a>好友的宝贝</a>
        </li>
        <li>
          <%= link_to "产品库", :controller => "store", :action => "index" %>
        </li>
		<li>
          <%= link_to "注册", :controller => "users", :action => "new" %>
		</li>
      </u1>
    </div>
    <div id="main">
      <div id="columns">
        <div id="sidebar">
          <div id="popList">
            <div class="box-t">
              <span class="box-tl"></span>
              <span class="box-tm"></span>
              <span class="box-tr"></span>
            </div>
            <div class="box-wrap">
              <div class="box-cont">
                <h3>热评产品</h3>
                <ul class="invite-list draw-list">
                  <li>
                    iPad
                  </li>
                </ul>
              </div>
            </div>
            <div class="box-b">
              <span class="box-bl"></span>
              <span class="box-bm"></span>
              <span class="box-br"></span>
            </div>
          </div>
          <div class="spline">
          </div>
        </div>
        <div id="content">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>